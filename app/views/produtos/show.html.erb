<%- model_class = Produto -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
 <dt><strong><%= model_class.human_attribute_name(:foto) %>:</strong></dt>
  <dd><%= image_tag(@produto.foto, class: "img img-rounded img-responsive", size: 100) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:nome) %>:</strong></dt>
  <dd><%= @produto.nome.capitalize %></dd>
  <dt><strong><%= model_class.human_attribute_name(:marca) %>:</strong></dt>
  <dd><%= @produto.marca %></dd>
  <dt><strong><%= model_class.human_attribute_name(:embalagem) %>:</strong></dt>
  <dd><%= @produto.embalagem %></dd>
  <dt><strong>Atacadão</strong></dt>
  <dd><%= @produto.atacadao %></dd>
  <dt><strong>Assaí</strong></dt>
  <dd><%= @produto.assai %></dd>
  <dt><strong><%= model_class.human_attribute_name(:walmart) %>:</strong></dt>
  <dd><%= @produto.walmart %></dd>
</dl>

<%= link_to t('.back', :default => t("buttons.back")),
              produtos_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_produto_path(@produto), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              produto_path(@produto),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
